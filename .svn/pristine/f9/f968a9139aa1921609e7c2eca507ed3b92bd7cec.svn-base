/* CSS Document */



/*导航*/
.header {
  height: 60px;
  background: url(../images/header_bg.png) no-repeat;
  background-size: 100% 100%;
}
.header .logo {
  font-size: 28px;
  color: #ffffff;
  line-height: 60px;
  padding-left: 23px;
  float: left;
}
.header .logo img {
  padding-right: 10px;
  vertical-align: -12px;
}
.header .nav {
  float: right;
}
.header .nav ul {
  overflow: hidden;
  float: left;
}
.header .nav ul li {
  float: left;
  line-height: 60px;
  height: 60px;
  font-size: 16px;
  color: #ffffff;
  padding: 0 18px;
  cursor: pointer;
}
.header .nav ul li.active {
  background: #0693db;
  border-bottom: 4px solid #ffc000;
}
.header .nav ul li img {
  margin-right: 2px;
  vertical-align: -3px;
}
.people-info {
  float: right;
  height: 60px;
}
.people-info .line {
  width: 2px;
  height: 22px;
  background: #0a78b1;
  border-right: 1px solid #2cb7ed;
  margin-top: 19px;
  display: block;
  float: left;
  margin-right: 19px;
}
.people-info p {
  float: left;
  font-size: 14px;
  color: #ffffff;
  line-height: 60px;
  margin-right: 33px;
}
.people-info a {
  float: left;
  display: block;
  width: 19px;
  height: 19px;
  background: url(../images/index_icon6.png) no-repeat;
  margin-top: 21px;
  margin-right: 28px;
}
/*首页*/
.clear {
  clear: both;
}
/*aside内容*/
aside .LeftNav {
  width: 240px;
  overflow: hidden;
  margin-right: 20px;
  background-color: #fff;
  padding-top: 5px;
}
aside .NavLi {
  width: 100%;
  line-height: 46px;
  background: #f5f8fa;
  color: #111111;
  font-weight: 500;
}
aside .NavLi .NavLiContent {
  padding: 11px 24px 11px 18px;
}
aside .NavLi .TopicName {
  flex: 1;
  font-size: 18px;
  text-indent: 10px;
  line-height: 24px;
  cursor: pointer;
}
aside .NavLi .PublicInfoIcon {
  background: url(../images/xxgk.png);
}
aside .NavLi .ComplaintIcon {
  background: url(../images/tsjb.png);
}
aside .NavLi .OnlineSurveyIcon {
  background: url(../images/wsdc.png);
}
aside .NavLi .UpIcon {
  display: inline-block;
  width: 11px;
  height: 7px;
  position: relative;
  background: url(../images/up.png);
  top: 8px;
  cursor: pointer;
}
aside .NavLi .SecondNavList {
  display: none;
}
aside .NavLi.active {
  background: url(../images/leftside_bar_bg.png);
}
aside .NavLi.active .TopicName {
  color: #fff;
  font-weight: 700;
}
aside .NavLi.active .PublicInfoIcon {
  background: url(../images/xxgk2.png);
}
aside .NavLi.active .ComplaintIcon {
  background: url(../images/tsjb2.png);
}
aside .NavLi.active .OnlineSurveyIcon {
  background: url(../images/wsdc2.png);
}
aside .NavLi.active .UpIcon {
  background: url(../images/down.png);
}
aside .NavLi.active .SecondNavList {
  display: block;
}
aside .NavLi + .NavLi {
  border-top: 1px solid #fff;
}
aside .PublicInfoIcon,
aside .ComplaintIcon,
aside .OnlineSurveyIcon {
  display: inline-block;
  width: 24px;
  height: 24px;
}
aside .SecondNavLi {
  width: 100%;
  line-height: 46px;
  background: #fff;
}
aside .SecondNavLi .NavLiContent {
  padding: 11px 24px 11px 18px;
}
aside .SecondNavLi .NavLiContent .TopicName {
  flex: 1;
  font-weight: normal;
  font-size: 16px;
  color: #666666;
  text-indent: 10px;
  cursor: pointer;
}
aside .SecondNavLi .RightIcon {
  display: inline-block;
  width: 24px;
  height: 24px;
  background: url(../images/right.png) no-repeat center;
  visibility: hidden;
}
aside .SecondNavLi.active .NavLiContent .TopicName {
  color: #0b92e2;
}
aside .SecondNavLi.active .RightIcon {
  visibility: visible;
}
aside .SecondNavLi + .SecondNavLi {
  border-top: 1px dashed #c8deeb;
}
/*aside内容*/

